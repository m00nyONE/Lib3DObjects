<GuiXml>
    <Controls>
        <Label name="Lib3DObjects_Text" virtual="true" space="WORLD" horizontalAlignment="CENTER" verticalAlignment="CENTER" font="$(MEDIUM_FONT)|$(KB_22)|thick-outline" text="">
            <Dimensions x="200" y="200" />
            <Anchor point="CENTER" relativeTo="GuiRoot" relativePoint="CENTER"/>
        </Label>
    </Controls>

    <!-- THIS IS SO ANNOYING!!! WE NEED 2 DIFFERENT TEMPLATES BECAUSE ESO SIMPLY REFUSES TO DRAW IT WHEN IT'S CHILDREN ARE IN DIFFERENT SPACES -->
    <Controls>
        <Texture name="Lib3DObjects_Texture_World" virtual="true" tier="DT_LOW" layer="DL_BACKGROUND" textureFileReleaseOption="RELEASE_TEXTURE_AT_ZERO_REFERENCES">
            <Dimensions x="100" y="100" />
            <Anchor point="CENTER" relativeTo="GuiRoot" relativePoint="CENTER"/>
        </Texture>
    </Controls>
    <Controls>
        <Texture name="Lib3DObjects_Texture_Render" virtual="true" tier="DT_LOW" layer="DL_BACKGROUND" textureFileReleaseOption="RELEASE_TEXTURE_AT_ZERO_REFERENCES">
            <Dimensions x="100" y="100" />
            <Anchor point="CENTER" relativeTo="GuiRoot" relativePoint="CENTER"/>
        </Texture>
    </Controls>

    <Controls>
        <Control name="Lib3DObjects_Point" virtual="true" space="WORLD">
            <Dimensions x="100" y="100" />
            <Anchor point="CENTER" relativeTo="GuiRoot" relativePoint="CENTER"/>
            <Controls>
                <Texture name="$(parent)_Point" inheritAlpha="true" inheritScale="true" textureFile="Lib3DObjects/textures/plus.dds" >
                    <Dimensions x="50" y="50" />
                    <Anchor point="CENTER" relativeTo="$(parent)" relativePoint="CENTER"/>
                </Texture>
                <Label name="$(parent)_Label" inheritAlpha="true" inheritScale="true" horizontalAlignment="CENTER" verticalAlignment="CENTER" font="$(MEDIUM_FONT)|$(KB_22)|thick-outline" text="P">
                    <Dimensions x="100" y="30" />
                    <Anchor point="BOTTOM" relativeTo="$(parent)_Point" relativePoint="TOP" offsetY="-15"/>
                </Label>
                <Label name="$(parent)_Position" inheritAlpha="true" inheritScale="true" horizontalAlignment="CENTER" verticalAlignment="CENTER" font="$(MEDIUM_FONT)|$(KB_22)|thick-outline" text="X: 0.0 Y: 0.0 Z: 0.0">
                    <Dimensions x="250" y="30" />
                    <Anchor point="TOP" relativeTo="$(parent)_Point" relativePoint="BOTTOM" offsetY="15"/>
                </Label>
            </Controls>
        </Control>
    </Controls>

    <Controls>
        <Control name="Lib3DObjects_Marker" virtual="true" space="WORLD">
            <Dimensions x="100" y="100" />
            <Anchor point="CENTER" relativeTo="GuiRoot" relativePoint="CENTER"/>
            <Controls>
                <Texture name="$(parent)_Background" inheritAlpha="true" inheritScale="true">
                    <Dimensions x="100" y="100" />
                    <Anchor point="CENTER" relativeTo="$(parent)" relativePoint="CENTER"/>
                </Texture>
                <Texture name="$(parent)_Animation" inheritAlpha="true" inheritScale="true" hidden="true">
                    <Dimensions x="100" y="100" />
                    <Anchor point="CENTER" relativeTo="$(parent)" relativePoint="CENTER"/>
                </Texture>
                <Label name="$(parent)_Text" inheritAlpha="true" inheritScale="true" horizontalAlignment="CENTER" verticalAlignment="CENTER" font="$(MEDIUM_FONT)|$(KB_40)|thick-outline" text="">
                    <Dimensions x="300" y="150" />
                    <Anchor point="CENTER" relativeTo="$(parent)" relativePoint="CENTER"/>
                </Label>
            </Controls>
        </Control>
    </Controls>

    <Controls>
        <Texture name="Lib3DObjects_Line" virtual="true" space="WORLD">
            <Dimensions x="10" y="10" />
            <Anchor point="CENTER" relativeTo="GuiRoot" relativePoint="CENTER"/>
        </Texture>
    </Controls>

    <!-- THIS IS SO ANNOYING!!! WE NEED 2 DIFFERENT TEMPLATES BECAUSE ESO SIMPLY REFUSES TO DRAW IT WHEN IT'S CHILDREN ARE IN DIFFERENT SPACES -->
    <Controls>
        <Texture name="Lib3DObjects_Beam_World" virtual="true" textureFile="Lib3DObjects/textures/beam.dds">
            <Dimensions x="100" y="100" />
            <Anchor point="CENTER" relativeTo="GuiRoot" relativePoint="CENTER"/>
        </Texture>
    </Controls>
    <Controls>
        <Texture name="Lib3DObjects_Beam_Render" virtual="true" textureFile="Lib3DObjects/textures/beam.dds">
            <Dimensions x="100" y="100" />
            <Anchor point="CENTER" relativeTo="GuiRoot" relativePoint="CENTER"/>
        </Texture>
    </Controls>
</GuiXml>